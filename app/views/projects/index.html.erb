<div class="col-xs-12">
  <h2 class="pull-left">Projects</h2>
</div>

<div class="col-xs-12 project-list-container">
  <ul class="list-group">
    <% if @projects.empty? %>
    <li>No projects.</li>
    <% end %>
  <% @projects.each do |project| %>
  <li>
    <%= link_to project.title,  project_path(project) %>
    <span>
      <%= link_to 'Destroy', project,
                  method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </li>
  <% end %>
  </ul>
</div>

<div class="col-xs-12 project_toolbar">
  <%= link_to 'New Project', new_project_path, class: "btn btn-primary" %>
</div>
